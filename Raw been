<!-- Main Section for logged-in users -->
<div class="hidden" id="main-section">
  <div class="nav-bar d-flex justify-content-between align-items-center">
    <h4>Tourna OP</h4>
    <div class="coin-display">Coins: <span id="coin-count">0</span></div>
  </div>
  <div class="container py-4">
    <h3>User Information</h3>
    <ul>
      <li><strong>Username:</strong> <span id="user-name"></span></li>
      <li><strong>Email:</strong> <span id="user-email"></span></li>
      <li><strong>Coins:</strong> <span id="user-coins">0</span></li>
    </ul>
    <hr class="my-4">
    <div class="text-center">
      <h3>Watch Ads & Earn Coins</h3>
      <p>1 Ad = 3 Coins</p>
      <button id="watch-ad-btn" class="btn btn-success">Watch Ad</button>
    </div>
    <div class="mt-4" id="ad-box">
      <p>Ad will display here...</p>
    </div>
