<script>
let coins = 0;
document.getElementById('login-form').addEventListener('submit', function(e) {
  e.preventDefault();
  document.getElementById('login-signup-section').classList.add('hidden');
  document.getElementById('main-section').classList.remove('hidden');
});
document.getElementById('signup-form').addEventListener('submit', function(e) {
  e.preventDefault();
  alert('Sign Up successful! You can now log in.');
  document.getElementById('login-tab').click();
});
document.getElementById('watch-ad-btn').addEventListener('click', function() {
  const adBox = document.getElementById('ad-box');
  adBox.innerHTML = '<p>Watching Ad...</p>';
  setTimeout(() => {
    coins += 3;
    document.getElementById('coin-count').innerText = coins;
    adBox.innerHTML = '<p>Ad completed. You earned 3 coins!</p>';
  }, 3000); // Simulate a 3-second ad
});
document.getElementById('withdraw-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const withdrawAmount = parseInt(document.getElementById('withdraw-coins').value);
  if (withdrawAmount < 50) {
    alert('Minimum withdrawal amount is 50 coins.');
    return;
  }
  if (withdrawAmount > coins) {
    alert('Insufficient coins.');
    return;
  }
  coins -= withdrawAmount;
  document.getElementById('coin-count').innerText = coins;
  alert('Withdrawal request submitted.');
});
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
