<script>
// Store users in local storage
function saveUserToLocalStorage(user) {
  localStorage.setItem('user', JSON.stringify(user));
}

// Get user from local storage
function getUserFromLocalStorage() {
  return JSON.parse(localStorage.getItem('user'));
}

// Load user data to the page
function loadUserData() {
  const user = getUserFromLocalStorage();
  if (user) {
    document.getElementById('user-name').innerText = user.username;
    document.getElementById('user-email').innerText = user.email;
    document.getElementById('user-coins').innerText = user.coins;
    document.getElementById('coin-count').innerText = user.coins;
  }
}

// Handle user login
document.getElementById('login-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const username = document.getElementById('login-username').value;
  const password = document.getElementById('login-password').value;

  const storedUser = getUserFromLocalStorage();
  
  if (storedUser && storedUser.username === username && storedUser.password === password) {
    // Login successful
    document.getElementById('login-signup-section').classList.add('hidden');
    document.getElementById('main-section').classList.remove('hidden');
    loadUserData();
  } else {
    alert('Incorrect username or password');
  }
});

// Handle user signup
document.getElementById('signup-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const username = document.getElementById('signup-username').value;
  const email = document.getElementById('signup-email').value;
  const password = document.getElementById('signup-password').value;

  const user = { username, email, password, coins: 0 };
  saveUserToLocalStorage(user);

  alert('Sign up successful. Please login.');
  document.getElementById('signup-form').reset();
  document.getElementById('login-tab').click();
});

// Handle watching ads and earning coins
document.getElementById('watch-ad-btn').addEventListener('click', function() {
  const adBox = document.getElementById('ad-box');
  adBox.innerHTML = '<p>Watching Ad...</p>';
  setTimeout(() => {
    const user = getUserFromLocalStorage();
    user.coins += 3;
    saveUserToLocalStorage(user);
    loadUserData();
    adBox.innerHTML = '<p>Ad completed. You earned 3 coins!</p>';
  }, 3000);
});
</script>

